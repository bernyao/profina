# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-firebase-app-id

# OpenRouter Configuration
# Get your API key from https://openrouter.ai/
VITE_OPENROUTER_API_KEY=your-openrouter-api-key

# Site Information (Optional - for OpenRouter rankings)
VITE_SITE_URL=http://localhost:5173
VITE_SITE_NAME=Profina

# OpenRouter API Configuration
# API endpoint for OpenRouter (usually doesn't change, but configurable)
VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# AI Model Configuration
# Using Sonoma Sky Alpha model for AI-powered resume editing
VITE_AI_MODEL=sonoma/sonoma-sky-alpha

# Contact Information
# Contact email for support and inquiries
VITE_CONTACT_EMAIL=your-contact-email@example.com

# App Configuration
# Maximum number of resumes per user (free tier)
VITE_MAX_RESUMES_FREE=5
# Maximum number of resumes per user (premium tier, -1 for unlimited)
VITE_MAX_RESUMES_PREMIUM=-1
